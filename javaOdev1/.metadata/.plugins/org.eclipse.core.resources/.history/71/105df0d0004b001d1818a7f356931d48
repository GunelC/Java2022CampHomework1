package mukemmelSayi;

public class Main {

	public static void main(String[] args) {

		int number = 2;
		boolean mukemmelSayi = true;
		int total = 0;
		for(int i = 1; i < number; i++)
		{
			if(number % i == 0)
			{
				total = total + i;
			}
		}
		
		if(total == number)
		{
			System.out.println("Girilen sayı mükemmeldir");
		}
		else 
		{
			System.out.println("Sayı mükemmel değildir");
		}
	}

}
